<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" style="-fx-padding: 5px;" fx:controller="com.twasyl.slideshowfx.content.extension.code.controllers.CodeContentExtensionController">

    <HBox spacing="5" alignment="BASELINE_LEFT">
        <Label text="Language:" />
        <ChoiceBox fx:id="language" />
        <Label text="Background color:" />
        <ColorPicker fx:id="backgroundColor" />
    </HBox>

    <TextArea fx:id="code" prefColumnCount="50" prefRowCount="20" />
</VBox>

